</html>
<script>
	me.require(['errorTipEle'], 'bundle');
	me.require.ready('bundle',function(){
		$('#target').on('blur',function(){
             var tel = $(this).val().trim(),
                 err_tip = '';

            if(!$(this).val().trim()){
                 me.errorTipEle({
                    'target':'.aim',
                    'content':'请输入手机号',                   
                })
                return false;
            }
            if(!(/^1[3-9]\d{9}$/.test(tel))){
                me.errorTipEle({
                    'target':'.aim',
                    'content':'请输入正确的手机号',                    
                })
                return false;
            }
         })  
       $('#second').on('blur',function(){
           var id=$(this).val().trim();
           if(!id){
                me.errorTipEle({
                    'target':'#second',
                    'content':'金额不能为空',
					'direction':'right'
                })
                return false;
           }
           if(!/^\d*(\.\d{0,2})$/.test(id)){
               me.errorTipEle({
                    'target':'#second',
                    'content':'金额格式不正确'
                })
           }

       })
       
	})
	
</script>