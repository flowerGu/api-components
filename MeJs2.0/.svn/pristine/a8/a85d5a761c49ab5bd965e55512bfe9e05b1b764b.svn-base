/*
@input输入控件file模式
@代码:
<div data-type="file">
	<input type="file">
	<i class="me-ion-upload"></i>
	<span>选择文件</span>
</div>
@交互效果：默认,鼠标放上,获得焦点
@验证交互：验证中,验证成功,验证失败	
*/
[data-type="file"]{
	display: inline-block;
	position:relative;
	border:1px solid #bfbfbf;
	border-radius:3px;
	background:#fff;
	font-size:14px;
	width:100px;
	height:30px;
	padding:0 8px;
	overflow:hidden;
}
[data-type="file"]:hover{
	border-color:#919191;
}
[data-type="file"]:hover span{
	color:#5a5a5a;
}
[data-type="file"]:hover i{
	color:#919191;
}
[data-type="file"] input[type="file"]{
	width:100px;
	opacity:0;
	position:absolute;
	left:0px;
	top:2px;
	z-index:1;
}
[data-type="file"] i{
	font-size:24px;
	line-height:27px;
	color:#bfbfbf;
}
[data-type="file"] span{
	color:#919191;
	position:relative;top:-4px;
}

[data-type="file"][data-cyan]{
	border-color:#008997;
	background:#00a2ae;
	
}
[data-type="file"][data-cyan]:hover,
[data-type="file"][data-yellow]:hover,
[data-type="file"][data-purple]:hover,
[data-type="file"][data-orange]:hover,
[data-type="file"][data-pink]:hover,
[data-type="file"][data-blue]:hover,
[data-type="file"][data-green]:hover,
[data-type="file"][data-red]:hover{
	opacity:0.8;
}

[data-type="file"][data-cyan] i,
[data-type="file"][data-cyan] span,
[data-type="file"][data-yellow] i,
[data-type="file"][data-yellow] span,
[data-type="file"][data-purple] i,
[data-type="file"][data-purple] span,
[data-type="file"][data-orange] i,
[data-type="file"][data-orange] span,
[data-type="file"][data-pink] i,
[data-type="file"][data-pink] span,
[data-type="file"][data-blue] i,
[data-type="file"][data-blue] span,
[data-type="file"][data-green] i,
[data-type="file"][data-green] span,
[data-type="file"][data-red] i,
[data-type="file"][data-red] span{
	color:#fff;
}

[data-type="file"][data-yellow]{
	border-color:#e09a00;
	background:#ffbf00;
}
[data-type="file"][data-purple]{
	border-color:#6252cd;
	background:#7265e6;
}
[data-type="file"][data-orange]{
	border-color:#d75000;
	background:#f56a00;
}
[data-type="file"][data-pink]{
	border-color:#dc277d;
	background:#f5317f;
}
[data-type="file"][data-blue]{
	border-color:#0e77ca;
	background:#108ee9;
}
[data-type="file"][data-green]{
	border-color:#00924c;
	background:#00a854;
}
[data-type="file"][data-red]{
	border-color:#d73435;
	background:#f04134;
}