@charset "UTF-8";
/*
@input输入控件标准模式
@代码:
    <div data-type="norm">
		<input type="text" placeholder="默认">
	</div>
@交互效果：默认,鼠标放上,获得焦点
@验证交互：验证中,验证成功,验证失败	
*/
[data-type="norm"]{
	display: inline-block;
	position:relative;
	margin-bottom:16px;
	width:100%;
}
[data-type="norm"] input[type='text'],[data-type="norm"] input[type='password']{
	border:1px solid #bfbfbf;
	border-radius:3px;
	background:#fff;
	padding:5px;
	font-size:14px;
	width:100%;
	height:35px;
}
[data-type="norm"] input[type='text']:focus,[data-type="norm"] input[type='password']:focus{
	outline:0;
	box-shadow: 0 0 0 2px rgba(154,154,154,.2);
}
[data-type="norm"] input[type='text']:hover,[data-type="norm"] input[type='password']:hover{
	border-color:#919191;
}
[data-type="norm"]:before{
	content: attr(data-label);
	position:absolute;
	left:0px;
	top:35px;
	font-size:12px;
	padding:5px 0px 0px 0px;
	height:18px;
}
[data-state="fail"]:after {
	position:absolute;
	top:9px;
	right:0px;
    content:"\F128";
	display: inline-block;
    font-family: Ionicons;
    speak: none;
    font-style: normal;
    font-weight: normal;
    font-variant: normal;
    text-transform: none;
    text-rendering: auto;
    line-height: 1;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
	margin-right:5px;
	color:#f04134;
	font-size:20px;
}
[data-state="fail"]:before{
	color:#f04134;
}
[data-state="success"]:after {
	position:absolute;
	top:8px;
	right:0px;
    content:"\F3FF";
	display: inline-block;
    font-family: Ionicons;
    speak: none;
    font-style: normal;
    font-weight: normal;
    font-variant: normal;
    text-transform: none;
    text-rendering: auto;
    line-height: 1;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
	margin-right:5px;
	color:#00a854;
	font-size:20px;
}
[data-state="verify"]:after {
	position:absolute;
	top:9px;
	right:0px;
    content:"\F29C";
	display: inline-block;
    font-family: Ionicons;
    speak: none;
    font-style: normal;
    font-weight: normal;
    font-variant: normal;
    text-transform: none;
    text-rendering: auto;
    line-height: 1;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
	animation: loadingCircle 1s infinite linear;
	margin-right:5px;
	color:#108ee9;
	font-size:18px;
}
@-webkit-keyframes loadingCircle {
    0% {
        -webkit-transform-origin: 50% 50%;
        transform-origin: 50% 50%;
        -webkit-transform: rotate(0deg);
        transform: rotate(0deg)
    }

    to {
        -webkit-transform-origin: 50% 50%;
        transform-origin: 50% 50%;
        -webkit-transform: rotate(1turn);
        transform: rotate(1turn)
    }
}
@keyframes loadingCircle {
    0% {
        -webkit-transform-origin: 50% 50%;
        transform-origin: 50% 50%;
        -webkit-transform: rotate(0deg);
        transform: rotate(0deg)
    }

    to {
        -webkit-transform-origin: 50% 50%;
        transform-origin: 50% 50%;
        -webkit-transform: rotate(1turn);
        transform: rotate(1turn)
    }
}
